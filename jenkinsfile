pipeline{
    agent none
    stages{
        stage("Building")
        {
            agent {
            label "master"
            }
            steps{
                echo "Building on feature branch"
            }
        }
        stage("Testing parallelly"){
            parallel{
                stage("test on linux1"){
                    agent{
                        label "master"
                    }
                    steps{
                        echo "testing on master agent"
                        echo "testing on feature branch"
                    }
                }
                stage("test on slave 1"){
                    agent{
                        label "slave-1"
                    }
                    steps{
                        echo "test on slave 1 agent"
                        echo "test on feature branch"
                    }
                }
            }
        }
    }
}
